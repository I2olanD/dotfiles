{
  "$schema": "https://opencode.ai/config.json",
  "plugin": ["cc-safety-net", "opencode-metis"],
  "mcp": {
    "github-mcp": {
      "type": "remote",
      "url": "https://api.githubcopilot.com/mcp/",
      "headers": {
        "Authorization": "Bearer {env:MCP_GITHUB_PAT}"
      },
      "enabled": true
    },
    "mem-search": {
      "type": "local",
      "command": ["opencode-metis", "start-mcp"]
    }
  }
}
